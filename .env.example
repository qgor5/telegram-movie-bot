# Telegram Bot Token (от @BotFather)
TELEGRAM_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Имя канала, начиная с @ (бот должен быть админом канала)
CHANNEL_USERNAME=@film_kia

# API ключ TMDb (пример: 7cb67565ace3a08cd9d099c749787121)
TMDB_API_KEY=YOUR_TMDB_API_KEY

# Количество фильмов за одну публикацию
PUBLISH_COUNT=3

# Часы публикации через запятую (24-часовой формат)
PUBLISH_HOURS=15,18

# Язык запросов к TMDb (ru / uk / en)
LANGUAGE=ru
